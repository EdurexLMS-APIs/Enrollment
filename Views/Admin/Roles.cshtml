@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model CPEA.Utilities.ViewModel.AdminRolesVM
<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">Users Roles</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-hover mb-0 " id="dataTableExample">
                        <thead>
                            <tr>
                                <th class="pt-0">Id</th>
                                <th class="pt-0">Name</th>
                                <th class="pt-0">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.adminRolesList.Count > 0)
                            {
                                @foreach (var item in Model.adminRolesList)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                                        <td>
                                            <partial name="EditRole" />
                                            <div class="dropdown mb-2">
                                                <button class="btn p-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="icon-lg text-muted pb-3px" data-feather="more-horizontal"></i>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                    <a class="dropdown-item d-flex align-items-center" href="#" onclick="editRole(@item.Id,'@item.name')" data-toggle="modal" data-target="#editRoleModal"><i data-feather="edit-2" class="icon-sm mr-2"></i> <span class="">Edit</span></a>

                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div>
                    <a asp-controller="Admin" asp-action="AddRole" class="btn btn-primary" data-toggle="modal" data-target="#addRoleModal" style="margin-top: 15px; background-color: #058383 !important "> New Role</a>

                    <partial name="AddRole" />
                </div>
            </div>
        </div>
    </div>

</div>



<script>
    function editRole(g, h) {

        document.getElementById('roleId').value = g;
        document.getElementById('roleName').value = h;
    }
</script>