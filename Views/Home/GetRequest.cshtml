@model List<CPEA.Models.UserRequest>

<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">My Request</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    <h6 class="card-title mb-0"></h6>
                </div>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="pt-0">Title</th>
                                <th class="pt-0">Request Date</th>
                                <th class="pt-0">Status</th>
                                <th class="pt-0">Responded Date</th>
                                <th class="pt-0">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                        <td>@Html.DisplayFor(modelItem => item.RequestDate)</td>
                                        <td>
                                            @if (item.Responded  == true)
                                            {
                                                <span class="badge badge-success">RESPONDED</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">NOT RESPONDED</span>
                                            }
                                        </td>
                                        <td>
                                            @item.RespondedDate
                                        </td>
                                        <td>
                                            <div class="dropdown mb-2">
                                                <button class="btn p-0" type="button" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="icon-lg text-muted pb-3px" data-feather="more-horizontal"></i>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Home" asp-action="SingleRequest" asp-route-reqId="@item.Id"><i data-feather="edit" class="icon-sm mr-2"></i> <span class="">View Request</span></a>
                                                   
                                                </div>
                                            </div>


                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<div style=" text-align:right">
    <a asp-controller="Home" asp-action="NewRequest" class="btn btn-primary" style="margin-top: 15px; background-color: #058383 !important ">New Request</a>
    @*<partial name="NewProgram" />*@
</div>