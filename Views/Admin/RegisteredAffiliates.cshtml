@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<CPEA.Utilities.ViewModel.RegisteredAffiliates>
<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">All Affiliates</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-hover mb-0 " id="dataTableExample">
                        <thead>
                            <tr>
                                <th class="pt-0">Full Name</th>
                                <th class="pt-0">Email</th>
                                <th class="pt-0">Phone</th>
                                <th class="pt-0">Role</th>
                                <th class="pt-0">Reg. Date</th>
                                <th class="pt-0">Total Referred</th>
                                <th class="pt-0">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Role)
                                        </td>                                        
                                        <td>@Html.DisplayFor(modelItem => item.RegisteredDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TotalReferred)</td>
                                        <td><a asp-controller="Admin" asp-action="AllReferred" asp-route-email="@item.Email"> View Referred </a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

