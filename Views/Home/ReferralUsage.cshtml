@model CPEA.Utilities.ViewModel.ReferralUsage

<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">@Model.rCode Referral Code Usage</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    <h6 class="card-title mb-0"></h6>
                </div>
                <div class="table-responsive">
                    <table  id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="pt-0">Used By</th>
                                <th class="pt-0">Program</th>
                                <th class="pt-0">Amount Paid</th>
                                <th class="pt-0">Earnings</th>
                                <th class="pt-0">Reg Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.ReferralUsage2 != null && Model.ReferralUsage2.Count > 0)
                            {
                                @foreach (var item in Model.ReferralUsage2)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Fullname)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Program)</td>
                                        <td>₦@Html.DisplayFor(modelItem => item.AmountPaid)</td>
                                        <td>₦@Html.DisplayFor(modelItem => item.Earnings)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateRegistered)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">Discount Code</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    <h6 class="card-title mb-0"></h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="pt-0">Code</th>
                                <th class="pt-0">Rate</th>
                                <th class="pt-0">Total Approved</th>
                                <th class="pt-0">Total Applied</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Discount !=null && Model.Discount.Count > 0)
                            {
                                @foreach (var item in Model.Discount)
                                {
                                    <tr>
                                        <td><a asp-controller="Home" asp-action="DiscountUsage" asp-route-code="@item.Code"> @Html.DisplayFor(modelItem => item.Code)</a></td>
                                        <td>@Html.DisplayFor(modelItem => item.Rate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TotalApproved)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TotalApplied)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>