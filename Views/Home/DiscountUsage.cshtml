@model CPEA.Utilities.ViewModel.ListDiscountHisto 

<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">Discount Code Usage</h4>
    </div>
    <div class="d-flex align-items-center flex-wrap text-nowrap">
        <h4 class="mb-3 mb-md-0">Discount Code : @Model.code</h4>
    </div>
</div>


<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    @*<h6 class="card-title mb-0">Programs</h6>*@
                </div>
                <div class="table-responsive">
                    <table  id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="pt-0">Full Name</th>
                                <th class="pt-0">Program</th>
                                <th class="pt-0">Program Price</th>
                                <th class="pt-0">Discount Earned</th>
                                <th class="pt-0">Reg. Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.DiscountHisto.Count > 0)
                            {
                                @foreach (var item in Model.DiscountHisto)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Fullname)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Program)</td>
                                        <td>₦@Html.DisplayFor(modelItem => item.ProgramFee)</td>
                                        <td>₦@Html.DisplayFor(modelItem => item.Earnings)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateRegistered)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
