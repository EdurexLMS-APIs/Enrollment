<body>
    <div class="main-wrapper">

        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <div>
                    <img src="~/assets/images/EdurexAcademy.png" style="max-width:100%; height:auto; margin-top:10px;" />
                </div>
                <div class="sidebar-toggler not-active">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
            <div class="sidebar-body">
                
                @if (CPEA.Utilities.GeneralClass.role == "Admin")
                {
                    <partial name="_adminMenu" />
                }
                else
                {
                    <partial name="_staffMenu" />
                }
            </div>
        </nav>

        <!-- partial -->

        <div class="page-wrapper">

            <!-- partial:partials/_navbar.html -->
            <nav class="navbar">
                <a href="#" class="sidebar-toggler">
                    <i data-feather="menu"></i>
                </a>
                <div class="navbar-content">
                    <partial name="_adminHeader" />
                </div>
            </nav>
            <!-- partial -->

            <div class="page-content">

                @RenderBody()
            </div>

            <!-- partial:partials/_footer.html -->
            <partial name="_myFooter" />
            <!-- partial -->

        </div>
    </div>

    <!-- core:js -->
    <script src="~/assets/vendors/core/core.js"></script>
    <!-- endinject -->
    <!-- plugin js for this page -->
    <script src="~/assets/vendors/chartjs/Chart.min.js"></script>
