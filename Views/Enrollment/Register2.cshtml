    <script type="text/javascript">

        function checkPromo(promocode) {
            var code = document.getElementById('promoCode').value;

            var url = '/Home/GetPromoCode';

            $.post(url, { Code: code }, function (data) {

                var result = data;
                if (result == "Promo has expired") {
                    document.getElementById('promoAvailable').value = result;
                }
                else {

                    document.getElementById('promoAvailable').value = result + "%";

                    var table = document.getElementById("tblPayment");
                    var rows = table.rows;
                    var total = 0;
                    var cell;
                    for (var i = 1, iLen = rows.length - 1; i <= iLen; i++) {
                        cell = rows[i].cells[3];

                       var amount = parseFloat(cell.textContent.replace(/,/g, '') || cell.innerText.replace(/,/g, ''));

                        var percentage = (parseInt(result) / 100) * amount;

                        total -= percentage;

                        document.getElementById('amountPayable').value = total;
                    }
                    document.getElementById("totalPayment").innerText = "₦ " + parseFloat(total).toLocaleString() + ".00";

                }
            });
        }

        function AmountPayableKeyUp() {

            var enteredAmt = document.getElementById('amountPayable').value;
            document.getElementById('coursePayab').innerHTML = parseFloat(enteredAmt).toLocaleString() + ".00";

            var table = document.getElementById("tblPayment");
            var rows = table.rows;
            var total = 0;
            var cell;
            for (var i = 1, iLen = rows.length - 1; i <= iLen; i++) {
                cell = rows[i].cells[3];
                total += parseFloat(cell.textContent.replace(/,/g, '') || cell.innerText.replace(/,/g, ''));
            }
            document.getElementById("totalPayment").innerText = "₦ " + parseFloat(total).toLocaleString() + ".00";

        }

        document.getElementById("amountPayable").addEventListener("focusout", ValidateAmount);
        function ValidateAmount() {

            let x = document.querySelector('#optionsPart');

            if (x.checked) {

                var table = document.getElementById("tblPayment");
                var rows = table.rows;
                var fullCourseFee = 0;
                var cell;
                for (var i = 1, iLen = rows.length - 1; i <= iLen; i++) {
                    cell = rows[1].cells[2];
                    fullCourseFee = parseFloat(cell.textContent.replace(/,/g, '') || cell.innerText.replace(/,/g, ''));
                    break;
                }
                let a = document.getElementById("amountPayable").value;
                let d = 10000;
                let f = fullCourseFee;

                if ((parseFloat(a) < parseFloat(d)) || (parseFloat(a) > parseFloat(f))) {
                    var dep = "₦ " + d.toLocaleString() + ".00";
                    var fulP = "₦ " + f.toLocaleString() + ".00";
                    document.getElementById("displ").innerHTML = "Enter amount between " + dep.bold() + " and " + fulP.bold();

                    $("#paymentButton1").css("display", "none");
                }

                else {
                    $("#paymentButton").css("display", "block");

                    document.getElementById("displ").innerHTML = "";
                }
            }
        }
    </script>

