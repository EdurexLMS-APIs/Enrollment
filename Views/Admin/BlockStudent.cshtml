<!-- Modal -->

@model CPEA.Utilities.ViewModel.RegisteredStudentsVM
<div class="modal fade" id="blockStudentModal" tabindex="-1" role="dialog" aria-labelledby="blockStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="blockStudentModalLabel">Block Student</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="BlockStudent">
                    <div class="form-group">
                        <label for="studentNumber" class="col-form-label">Student Number :</label>
                        <input type="text" class="form-control" id="studentNumber" readonly>
                    </div>
                    <div class="form-group">
                        <label for="studentEmail" class="col-form-label">Student Email :</label>
                        <input type="text" class="form-control" id="studentEmail" readonly asp-for="@Model.blockStudentDTO.userEmail">
                    </div>
                    <div class="form-group">
                        <label for="studentName" class="col-form-label">Student Name :</label>
                        <input type="text" class="form-control" id="studentName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="pin" class="col-form-label">Your PIN:</label>
                        <input type="password" class="form-control" id="pin" asp-for="@Model.blockStudentDTO.PIN">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" style="margin-right: 10px; background-color: #058383 !important">Block User</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
