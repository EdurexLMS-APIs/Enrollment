@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model CPEA.Utilities.ViewModel.ProgramCategoryVM
<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">Program Categories</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    <h6 class="card-title mb-0"></h6>
                </div>
                <div style="float:right; margin-bottom:20px;">
                    <a asp-controller="Admin" asp-action="AddProgramCategory" class="btn btn-primary" data-toggle="modal" data-target="#AddProgramCategory" style="margin-top: 15px; background-color: #058383 !important "> New Category</a>
                    <partial name="AddProgramCategory" />
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0 " id="dataTableExample">
                        <thead>
                            <tr>
                                @*<th class="pt-0">Id</th>*@
                                <th class="pt-0">Institution</th>
                                <th class="pt-0">Name</th>
                                <th class="pt-0">Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Category.Count > 0)
                            {
                                @foreach (var item in Model.Category)
                                {
                                    <tr>
                                        @*<td>@Html.DisplayFor(modelItem => item.Id)</td>*@
                                        <td>@Html.DisplayFor(modelItem => item.Institution.ShortName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
