@model CPEA.Utilities.ViewModel.WalletRecord
<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div class="row col-sm-12">
        <div class="col-sm-8" style="float:left">
            <h4 class="mb-3 mb-md-0">My Wallet Record</h4>
        </div>
        <div class="col-sm-4" style="float:right">
            <h4 class="card-title"><span class="text-muted">Available Balance : </span> @Model.AvailableBalance</h4>
        </div>
       
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    <h6 class="card-title mb-0"></h6>
                </div>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th class="pt-0">Amount</th>
                                <th class="pt-0">Payment Type</th>
                                <th class="pt-0">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.WalletRecordList.Count() > 0)
                            {
                                @foreach (var item in Model.WalletRecordList)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                        <td>
                                            @if (item.Type == CPEA.Utilities.WalletEnums.Credit)
                                            {
                                                <span class="badge badge-success">CREDIT</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">DEBIT</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>