@model CPEA.Utilities.DTO.AdminRegisVM

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">Register New User</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <form asp-action="Register2">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Last Name<span style="color:red">*</span></label>
                                <input type="text" asp-for="AdminRegis.LastName" class="form-control" placeholder="Enter last name" required>
                                <span asp-validation-for="AdminRegis.LastName" class="text-danger"></span>
                            </div>
                        </div><!-- Col -->
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">First Name<span style="color:red">*</span></label>
                                <input type="text" asp-for="AdminRegis.FirstName" class="form-control" placeholder="Enter first name" required>
                                <span asp-validation-for="AdminRegis.FirstName" class="text-danger"></span>
                            </div>
                        </div><!-- Col -->
                    </div><!-- Row -->
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Phone Number<span style="color:red">*</span></label>
                                <input type="text" asp-for="AdminRegis.Phone" class="form-control" placeholder="Enter phone number" required>
                                <span asp-validation-for="AdminRegis.Phone" class="text-danger"></span>
                            </div>
                        </div><!-- Col -->
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Role<span style="color:red">*</span></label>
                                <select class="js-example-basic-single w-100" data-width="100%" data-placeholder="Select an option" required asp-for="AdminRegis.Role" asp-items="@Model.adminRoles.Select(x => new SelectListItem() { Text = x.name, Value = x.Id.ToString() }).ToList()">
                                    <option label="Select an option" value=""></option>
                                </select>
                            </div>
                        </div><!-- Col -->
                    </div><!-- Row -->
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Email<span style="color:red">*</span></label>
                                <input type="email" asp-for="AdminRegis.Email" class="form-control" placeholder="Enter email" required>
                                <span asp-validation-for="AdminRegis.Email" class="text-danger"></span>
                            </div>
                        </div><!-- Col -->
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Password<span style="color:red">*</span></label>
                                <input type="password" asp-for="AdminRegis.Password" class="form-control" placeholder="Enter password" required>
                                <span asp-validation-for="AdminRegis.Password" class="text-danger"></span>
                            </div>
                        </div><!-- Col -->
                    </div><!-- Row -->
                    <div class="mt-3">
                        <input type="submit" value="Register" class="btn btn-primary mr-2 mb-2 mb-md-0 text-white" style="float:right; background-color: #058383 !important" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>