<div class="row">
    <div class="col-lg-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-baseline mb-2">
                    <h6 class="card-title mb-0"></h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0 " id="dataTableExample">
                        <thead>
                            <tr>
                                @*<th class="pt-0">Id</th>*@
                                <th class="pt-0">Payment Reference</th>
                                <th class="pt-0">Student Id</th>
                                <th class="pt-0">Payee</th>
                                <th class="pt-0">Amount</th>
                                <th class="pt-0">Program</th>
                                <th class="pt-0">Status</th>
                                <th class="pt-0">Payment Date</th>
                                <th class="pt-0">Payment Method</th>
                                <th class="pt-0">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.AllPayments.Count > 0)
                            {
                                @foreach (var item in Model.AllPayments)
                                {
                                    <tr>

                                        <td>@Html.DisplayFor(modelItem => item.PaymentReference)</td>
                                        <td>@Html.DisplayFor(modelItem => item.StudentId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Payee)</td>
                                        <td>₦ @Html.DisplayFor(modelItem => item.Amount)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Program)</td>
                                        <td>
                                            @if (item.StatusId == CPEA.Utilities.PaymentStatusEnums.Paid)
                                            {
                                                <span class="badge badge-success">@Html.DisplayFor(modelItem => item.StatusId)</span>
                                            }
                                            else if (item.StatusId == CPEA.Utilities.PaymentStatusEnums.Initialized)
                                            {
                                                <span class="badge badge-warning">@Html.DisplayFor(modelItem => item.StatusId)</span>
                                            }
                                            else if (item.StatusId == CPEA.Utilities.PaymentStatusEnums.Pending)
                                            {
                                                <span class="badge badge-info-muted">@Html.DisplayFor(modelItem => item.StatusId)</span>
                                            }
                                            else if (item.StatusId == CPEA.Utilities.PaymentStatusEnums.Failed)
                                            {
                                                <span class="badge badge-danger">@Html.DisplayFor(modelItem => item.StatusId)</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentMethodId)</td>
                                        <td>
                                            <partial name="ConfirmPayment" />
                                            @if (item.StatusId != CPEA.Utilities.PaymentStatusEnums.Paid && item.TransactionReference == "Offline Payment")
                                            {
                                                <a class="btn btn-primary" href="#" onclick="Confirm('@item.Id', '@item.PaymentReference')" style="background-color: #058383 !important" data-toggle="modal" data-target="#confirmModal"><i data-feather="check" class="icon-sm mr-2"></i> <span class="">Confirm</span></a>

                                               @* <a asp-controller="Admin" asp-action="ConfirmPayment" asp-route-Id="@item.Id" class="btn btn-primary" style="background-color: #058383 !important">Confirm Payment</a>*@
                                            }
                                            else if (item.StatusId == CPEA.Utilities.PaymentStatusEnums.Pending)
                                            {
                                                <a href="#" class="btn btn-secondary">Requery</a>
                                            }
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    function Confirm(g, t) {

        document.getElementById('Id').value = g;
        document.getElementById('paymentR').value = t;
    }
</script>