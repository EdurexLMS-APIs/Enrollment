<!-- Modal -->

@model CPEA.Utilities.ViewModel.RegisteredUsersVM
<div class="modal fade" id="resetUserModal" tabindex="-1" role="dialog" aria-labelledby="resetUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetUserModalLabel">Reset User Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="ResetUserPassword">
                    <div class="form-group">
                        <label for="userEmail" class="col-form-label">User Email :</label>
                        <input type="text" class="form-control" id="userEmailR" readonly asp-for="@Model.ResetUserPasswordDTO.userEmail">
                    </div>
                    @*<div class="form-group">
                        <label for="oldPassword" class="col-form-label">Old Password :</label>
                        <input type="password" class="form-control" id="oldPassword">
                    </div>*@
                    <div class="form-group">
                        <label for="newPassword" class="col-form-label">New Password :</label>
                        <div class="search">
                            <span class="form-element">
                                <span class="fa fa-eye btn btn-default" id="toggleP" style="display:none;" onclick="clicktoggleP()"></span>
                                <input class="form-control" type="password" asp-for="@Model.ResetUserPasswordDTO.newPassword" id="password" required placeholder="Password" onkeyup="displayIcon()">
                            </span>
                        </div>
                        @*<input type="password" class="form-control" id="newPassword" asp-for="@Model.ResetUserPasswordDTO.newPassword">*@
                    </div>
                    <div class="form-group">
                        <label for="pin" class="col-form-label">Your PIN:</label>
                        <input type="password" class="form-control" id="pin" asp-for="@Model.ResetUserPasswordDTO.PIN">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" style="margin-right: 10px; background-color: #058383 !important">Reset Password</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script>
    function displayIcon() {

        var value = document.getElementById('password').value;
        if (value.length > 0) {
            $("#toggleP").css("display", "block");
        }
        else {

            $("#toggleP").css("display", "none");
        }
    }

    function clicktoggleP() {

        var type = $("#password").attr('type');

        if (type == "password") {
            $("#password").attr('type', 'text');
        }
        else {
            $("#password").attr('type', 'password');

        }
    }
</script>